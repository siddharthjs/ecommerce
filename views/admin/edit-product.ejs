<%- include("../partials/header.ejs") %>

    <main>
        <form action="/admin/<% if(product) { %>edit-product<%}else {%>add-product<%}%>" method="POST" enctype="multipart/form-data">
            <input type="text" name="title" placeholder="Title" value="<%if(product){%><%=product.title%><%}%>">
            <br>
            <input type="text" name="price" placeholder="Price" value="<% if(product) { %><%=product.price %><%}%>">
            <br>
            
            <label>Upload Product Image: <input type="file" name="productImage" value="<% if(product) { %><%=product.imageURL %><%}%>"></label>
            <br>
            <textarea placeholder="Product description" name="description"  cols="30" rows="10"><% if(product) { %><%=product.description%><%}%></textarea>
            <br>
			<input type="hidden" value="<%if(product){%><%=product.id%><%}%>" name="id">
            <button type="submit"><% if(product) { %> Update Product <% }else{ %> Add Product <%}%></button>
        </form>
    </main>

<%- include("../partials/footer.ejs") %>
